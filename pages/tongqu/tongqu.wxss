.tongqu-main {
    height: 100%;
}
.top-bar {
    position: fixed;
    top: 0;
    z-index: 1;

    width: 100%;
    height: 32px;

    background-color: #fafafa;
}
.top-bar-item {
    display: inline-block;

    border-bottom: 1px solid #ccc;
    width: 50%;
    height: 100%;

    font-size: 12px;

    color: #333;

    transition: font-size .3s;
}
.top-bar-item-active {
    border-bottom: 2px solid #0a4ca1;

    font-size: 14px;

    color: #0a4ca1;
}
.top-bar-item-wrapper {
    display: flex;

    height: 100%;

    align-items: center;
    justify-content: center;
}
.acts-list {
    margin-top: 32px;
    height: 100%;
}
.act-item {
    display: flex;

    position: relative;

    margin: 0 10px;
    border-bottom: 1px solid #d9d9d9;
    width: calc(100% - 20px);
    height: 110px;

    font-size: 12px;

    color: #333;
    background-color: #fff;
}
.act-left {
    min-width: 90px;
    height: 100%;
}
.act-left-wrapper {
    display: flex;

    width: 90px;
    height: 100%;

    align-items: center;
    justify-content: center;
}
.act-poster {
    border-radius: 5px;
    width: 80px;
    height: 100px;
}
.act-right {
    padding: 5px;
    padding-left: 0;
    width: calc(100% - 90px);
    height: 100%;
}
.act-right-wrapper {
    display: flex;

    width: 100%;
    height: 100%;

    flex-direction: column;
}
.act-top {
    width: 100%;
    height: 20px;
}
.act-name {
    display: flex;

    height: 100%;

    align-items: center;
}
.act-name-wrapper {
    display: inline-block;
    overflow: hidden;

    max-width: calc(100% - 69px);

    font-size: 14px;
    font-weight: 700;
    white-space: nowrap;
    text-overflow: ellipsis;

    color: #000;
}
.act-status-user {
    top: 5px;
    right: 5px;
}
.act-middle {
    width: 100%;
    height: calc(100% - 38px);
}
.act-middle-wrapper {
    display: flex;

    width: 100%;
    height: 100%;

    flex-direction: column;
    justify-content: space-around;
}
.act-time-icon,
.act-source-icon {
    width: 14px;
    height: 14px;
}
.act-location-icon {
    width: 15px;
    height: 15px;
}
.act-location-text-wrapper,
.act-source-text-wrapper {
    display: inline-block;
    overflow: hidden;

    max-width: 12.5rem;

    white-space: nowrap;
    text-overflow: ellipsis;
}
.act-bottom {
    display: flex;

    width: 100%;
    height: 18px;
}
.act-views,
.act-members {
    height: 100%;

    flex-grow: 1;
}
.act-views-wrapper,
.act-members-wrapper {
    display: flex;

    align-items: center;
}
.act-views-icon {
    width: 16px;
    height: 16px;
}
.act-members-icon {
    width: 15px;
    height: 15px;
}
.act-views-text,
.act-members-text {
    margin-left: 5px;

    font-size: 13px;
}
.load-more {
    padding: 10px;

    text-align: center;
}
.load-content {
    font-size: 26rpx;

    color: #666;
}
.loading-text {
    display: inline-block;

    margin-left: 5px;

    font-size: 26rpx;
    vertical-align: middle;
}
.weui-loading {
    display: inline-block;

    width: 20px;
    height: 20px;

    vertical-align: middle;

    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;

    animation: weuiLoading 1s steps(12, end) infinite;
}
